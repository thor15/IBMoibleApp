<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IBCompSciApp.ViewViewModel.ForgotPassword.ResetPassword.ResetPasswordView">

    <AbsoluteLayout>

        <Label Text="Reset Password"
               TextColor="Black"
               FontSize="Title"
               HorizontalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5, 0.35, 200, 50"
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Entry Placeholder="Password"
               Text="{Binding PasswordText}"
               AbsoluteLayout.LayoutBounds="0.5,0.45, 200, 50"
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Entry Placeholder="Reenter Password"
               Text="{Binding SecondPasswordText}"
               AbsoluteLayout.LayoutBounds="0.5,0.55, 200, 50"
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Button Text="Reset Password"
                Command="{Binding ResetPasswordClicked}"
                AbsoluteLayout.LayoutBounds="0.5,0.65, 200, 50"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>

    </AbsoluteLayout>

</ContentPage>