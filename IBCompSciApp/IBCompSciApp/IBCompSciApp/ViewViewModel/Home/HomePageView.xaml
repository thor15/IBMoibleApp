<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IBCompSciApp.ViewViewModel.Home.HomePageView"
             Title="{Binding Title}">

    <AbsoluteLayout>

        <Label Text="Home"
               TextColor="Black"
               FontSize="Title"
               HorizontalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5, 0.35, 200, 50"
               AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <Button Text="Series"
                AbsoluteLayout.LayoutBounds="0.5,.45, 200, 50"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Command="{Binding SeriesClicked}"/>
        
        <Button Text="Next Book"
                AbsoluteLayout.LayoutBounds="0.5,0.55, 200, 50"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Command="{Binding BookClicked}"/>
        
        <Button Text="Reading Times"
                AbsoluteLayout.LayoutBounds="0.5,.65, 200, 50"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Command="{Binding TimesClicked}"/>

    </AbsoluteLayout>
    
</ContentPage>